                        <TextBlock Margin="10,0,0,0" Text=" Short description of the message here                         14.27" FontSize="12" FontWeight="Normal"/>

                    </StackPanel>
                </Button>
                <Button x:Name="eContactName" Height="auto" Background="Transparent" BorderThickness="0,0,0,0.5" FontFamily="Century Gothic" FontSize="16" Foreground="Black" Padding="20,20,0,20" HorizontalContentAlignment="Left" FontWeight="Bold">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="10,0,0,0" Text=" From Contact Name                     2020-09-01"/>

                        <TextBlock Margin="10,0,0,0" Text=" Short description of the message here                         14.26" FontSize="12" FontWeight="Normal"/>

                    </StackPanel>
                </Button>
                <Button x:Name="fContactName" Height="auto" Background="Transparent" BorderThickness="0,0,0,0.5" FontFamily="Century Gothic" FontSize="16" Foreground="Black" Padding="20,20,0,20" HorizontalContentAlignment="Left" FontWeight="Bold">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="10,0,0,0" Text=" From Contact Name                     2020-09-01"/>

                        <TextBlock Margin="10,0,0,0" Text=" Short description of the message here                         14.25" FontSize="12" FontWeight="Normal"/>

                    </StackPanel>
                </Button>
                <Button x:Name="gContactName" Height="auto" Background="Transparent" BorderThickness="0,0,0,0" FontFamily="Century Gothic" FontSize="16" Foreground="Black" Padding="20,20,0,20" HorizontalContentAlignment="Left" FontWeight="Bold">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="10,0,0,0" Text=" From Contact Name                     2020-09-01"/>

                        <TextBlock Margin="10,0,0,0" Text=" Short description of the message here                         14.24" FontSize="12" FontWeight="Normal"/>

                    </StackPanel>
                </Button>

            </StackPanel>

        </Grid>

        <Grid x:Name="sub_Menu2_Grid" Grid.Column="3" Background="White">
            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE91F;" FontSize="50" Foreground="AliceBlue" Margin="30,40,0,0" HorizontalAlignment="Left" />
            <TextBlock Text="From Contact Name" HorizontalAlignment="Left" Margin="100,50,0,0" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="To Firstname Lastname"  HorizontalAlignment="Left" Margin="100,50,0,0" Foreground="Black" Padding="0,20"/>



            <TextBlock Text="Hej där, " Margin="25,130,0,20" FontSize="14"/>
