            <TextBlock Text="Trevlig dag!" Margin="25,225,0,20" FontSize="14"/>
            
            <TextBlock Text="Med vänliga hälsningar" Margin="25,250,0,20" Padding="0,10" FontStyle="Italic" Foreground="Gray"/>
            <TextBlock Text="Contact Name" Margin="25,270,0,20" Padding="0,8" FontStyle="Italic" Foreground="Gray"/>
       





















        </Grid>





















    </Grid>
</Window>
