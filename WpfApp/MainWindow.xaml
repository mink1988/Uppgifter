                <Button x:Name="bContactName" Height="auto" Background="Transparent" BorderThickness="0,0,0,0.5" FontFamily="Century Gothic" FontSize="16" Foreground="Black" Padding="20,20,0,20" HorizontalContentAlignment="Left" FontWeight="Bold">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="10,0,0,0" Text=" From Contact Name                     2020-09-01"/>

                        <TextBlock Margin="10,0,0,0" Text=" Short description of the message here                         14.29" FontSize="12" FontWeight="Normal"/>

                    </StackPanel>
                </Button>

                <Button x:Name="cContactName" Height="auto" Background="Transparent" BorderThickness="0,0,0,0.5" FontFamily="Century Gothic" FontSize="16" Foreground="Black" Padding="20,20,0,20" HorizontalContentAlignment="Left" FontWeight="Bold">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="10,0,0,0" Text=" From Contact Name                     2020-09-01"/>

                        <TextBlock Margin="10,0,0,0" Text=" Short description of the message here                         14.28" FontSize="12" FontWeight="Normal"/>

